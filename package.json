{
  "name": "personal-portfolio",
  "version": "0.1.0",
  "description": "A modern, responsive portfolio built with Next.js 15, TypeScript, and styled-components",
  "author": "Trevor H <trevorh2007@example.com>",
  "license": "MIT",
  "type": "module",
  "homepage": "https://trevorh2007.github.io/portfolio",
  "repository": {
    "type": "git",
    "url": "https://github.com/trevorh2007/portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/trevorh2007/portfolio/issues"
  },
  "keywords": [
    "portfolio",
    "nextjs",
    "typescript",
    "styled-components",
    "react",
    "web-development"
  ],
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --config config/eslint.config.js",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx --config config/eslint.config.js",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --config config/eslint.config.js --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\" --config config/prettier.config.js",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\" --config config/prettier.config.js",
    "format:staged": "prettier --write --config config/prettier.config.js",
    "type-check": "tsc --noEmit",
    "test": "jest --config=config/jest/jest.config.cjs",
    "test:watch": "jest --config=config/jest/jest.config.cjs --watch",
    "test:coverage": "jest --config=config/jest/jest.config.cjs --coverage",
    "test:ci": "jest --config=config/jest/jest.config.ci.cjs --coverage --watchAll=false --passWithNoTests",
    "validate": "npm run type-check && npm run lint && npm run test:ci && npm run build"
  },
  "dependencies": {
    "next": "^15.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-timer-hook": "^3.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autoprefixer": "^10.4.24",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^9.15.0",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-testing-library": "^6.4.0",
    "gh-pages": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.6.3"
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
